.main_content
  #recipe_top.row
    .col-md-4
      .recipe_image
        = image_tag @recipe.image
    .col-md-8
      #recipe_info
        %h1= @recipe.title
        %p.description= @recipe.description
  .row
    .col-md-6
      #ingredients
        %h2 Ingredients
        %ul
          - @recipe.ingredients.each do |ingredient|
            %li= ingredient.name
    .col-md-6
      #directions
        %h2 Directions
        %ul
          - @recipe.directions.each do |direction|
            %li= direction.step
  .row
    .col-md-12
      .btn-group
        = link_to "Back", root_path, class: "btn btn-default"
        = link_to "Edit", edit_recipe_path(@recipe), class: "btn btn-default"
        = link_to "Delete", recipe_path(@recipe), method: :delete, data: { confirm: "Are you suer?" }, class: "btn btn-danger"
